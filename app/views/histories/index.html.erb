<div class='container-fluid'>
  <h1 class='title'>立て替え一覧</h1>

  <div class='row justify-content-center'>
    <%= link_to '立て替え登録', new_history_path, class:'btn btn-primary btn-lg col-md-4'%>
  </div>

  <div class='row'>
    <div class='col'>
      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th scope='col' class='text-center'>支払い者</th>
            <th scope='col' class='text-center'>用途</th>
            <th scope='col' class='text-center'>金額</th>
          </tr>
        </thead>
        <tbody>
          <% @histories.each do |history| %>
            <tr>
              <td class="text-center"><%=history.user.name%></td>
              <td class="text-center"><%=history.event%></td>
              <td class="text-center"><%=history.price%>円</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class='mt-100'>
    <h2 class='title mt-5'>総額：<%= @total %> 円</h2>
  </div>
</div>