<div class='container-fluid'>
  <h1 class="title">登録情報</h1>

  <div class="row justify-content-center">
      <%= link_to "グループの編集", groups_path, class:"btn btn-primary btn-lg col-md-2" %>
      <%= link_to "メンバーの編集", users_path, class:"btn btn-primary btn-lg col-md-2" %>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col" class="text-center">メンバー名</th>
        <th scope="col" class="text-center">グループ名</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each_with_index do | user, index | %>
        <tr>
          <th scope="row" class="text-center"><%=index+1%></th>
          <td class="text-center"><%=user.name%></td>
          <% if user.group %>
            <td class="text-center"><%=user.group.name%></td>
          <% else %>
            <td class="text-center">グループなし</td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
